<resources>
    <style name="TokenEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColorHint">#FF78C1C4</item>
        <item name="android:textColorPrimary">#FFFFFFFF</item>
        <item name="colorControlActivated">@android:color/white</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
        <item name="android:imeOptions">actionSend</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="InformationError">
        <item name="android:textColor">#FFF3EC2B</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/circall_token_error_text_size</item>
    </style>

    <style name="CircallDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">#FF51C0C2</item>
    </style>

    <style name="CircallWelcomeTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#FFFFFF</item>
        <item name="colorPrimaryDark">#2D8787</item>
        <item name="colorAccent">#FF4081</item>
        <item name="android:windowBackground">@drawable/bg_circall_welcome</item>
    </style>
</resources>
